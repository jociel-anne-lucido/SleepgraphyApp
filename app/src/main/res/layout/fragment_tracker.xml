<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Tracker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"

            android:src="@drawable/ic_back"></ImageView>
        <TextView
            android:id="@+id/return_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Return"
            android:textSize="17dp"
            android:layout_toRightOf="@id/back"
            android:textColor="@color/subtitle"></TextView>
        <TextView
            android:id="@+id/sleep_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/arial_mt_rounded"
            android:text="If you go to sleep now, "
            android:textColor="@color/heading"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/wakeup_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/arial_mt_rounded"
            android:text="You should wake up at:"
            android:textColor="@color/heading"
            android:textSize="18sp"
            android:layout_below="@id/sleep_txt"></TextView>
        <TextView
            android:id="@+id/time_1"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/accent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wakeup_txt"
            android:background="@drawable/rectangle"
            android:layout_marginTop="50dp"></TextView>
        <TextView
            android:id="@+id/time_2"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/accent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/time_1"
            android:background="@drawable/rectangle"
            android:layout_marginTop="22dp"></TextView>
        <TextView
            android:id="@+id/time_3"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/accent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/time_2"
            android:background="@drawable/rectangle"
            android:layout_marginTop="22dp"></TextView>
        <TextView
            android:id="@+id/time_4"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/accent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/time_3"
            android:background="@drawable/rectangle"
            android:layout_marginTop="22dp"></TextView>
        <TextView
            android:id="@+id/time_5"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/accent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/time_4"
            android:background="@drawable/rectangle"
            android:layout_marginTop="22dp"></TextView>

        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:layout_marginStart="24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/time_5"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/arial_mt_rounded"
            android:text="Start Sleep Tracking"
            android:backgroundTint="@color/heading"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"></Button>




    </RelativeLayout>





</FrameLayout>